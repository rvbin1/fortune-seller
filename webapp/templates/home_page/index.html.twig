{% extends 'base.html.twig' %}

{% block main %}
    {{ parent() }}
    {% block home_page_content %}
        <div class="items-container">
            {% if items is not empty %}
                <div class="items-list">
                    {% for item in items %}
                        <div class="item">
                            {% if item.getPicUrl() is not empty %}
                                <div class="icon">
                                    <img src="{{ item.getPicUrl() }}" alt="{{ item.name }} Icon" class="item-icon">
                                </div>
                            {% endif %}
                            <div class="item-details">
                                <div class="item-name">
                                    <a href="{{ path('app_detail_page', {
                                        'id': item.id,
                                        'crafting': app.request.get('crafting'),
                                        'mysticForge': app.request.get('mysticForge')
                                    }) }}">
                                        {{ item.name }} ({{ item.getConvertedPrice() }})
                                    </a>
                                    <i class="fa-solid fa-link"></i>
                                </div>
                                <div class="item-attributes">
                                    {% if item.getAttributeNames() is not empty %}
                                        Attributes: {{ item.getAttributeNames() }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {{ include('includes/pagination.html.twig') }}
            {% else %}
                <p class="no-items">Keine Items gefunden.</p>
            {% endif %}
        </div>
    {% endblock %}
{% endblock %}
